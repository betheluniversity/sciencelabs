{% extends 'BethelSessionViewBundle:Default:form_base.html.twig' %}

{% block topnav %}
    {{ parent() }}
{% endblock %}


    {% block main %}
        <div class="row">
            <div class="large-12 columns">

                <div class="callout panel">
                    <p>{{ app.request.get('_route') == 'session_edit_attendance' ? 'Edit' : 'Add' }} Attendance for <b>{{ studentSession.student }}</b></p>
                </div>
            </div>
        </div>

        <div class="large-12 columns">
            {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="row">
                <div class="large-6 columns">
                    {{ form_label(form.timeIn) }}
                    {{ form_errors(form.timeIn) }}
                    {{ form_widget(form.timeIn) }}
                </div>
                <div class="large-6 columns">
                    {{ form_label(form.timeOut) }}
                    {{ form_errors(form.timeOut) }}
                    {{ form_widget(form.timeOut) }}
                </div>
            </div>
            <div class="row">
                <div class="large-12 columns">
                    {% if form.courses.vars.choices|length %}
                    {{ form_label(form.courses) }}
                    {% endif %}
                    {{ form_errors(form.courses) }}
                    {{ form_widget(form.courses) }}
                </div>
            </div>
            <div class="row">
                <div class="large-2 columns">
                    {{ form_label(form.otherCourse) }}
                    {{ form_errors(form.otherCourse) }}
                    {{ form_widget(form.otherCourse) }}
                </div>
                <div class="large-10 columns">
                    {{ form_label(form.otherCourseName) }}
                    {{ form_errors(form.otherCourseName) }}
                    {{ form_widget(form.otherCourseName) }}
                </div>
            </div>

            <div class="row">
                <div class="large-12 columns">
                    {{ form_widget(form.save) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>

    {% endblock %}