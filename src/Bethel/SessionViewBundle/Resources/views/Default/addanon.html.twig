{% extends 'BethelSessionViewBundle:Default:form_base.html.twig' %}

{% block topnav %}
    {{ parent() }}
{% endblock %}


{% block main %}
    <div class="row">
        <div class="large-12 columns">

            <div class="callout panel">
                <p>Add session attendance.</p>
            </div>
        </div>
    </div>

    <div class="large-6 columns">
        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="row">
            <div class="large-12 columns">
                {{ form_label(form.anonStudents) }}
                {{ form_errors(form.anonStudents) }}
                {{ form_widget(form.anonStudents) }}
            </div>
        </div>

        <div class="row">
            <div class="large-12 columns">
                {{ form_widget(form.save) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}