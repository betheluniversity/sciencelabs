{% extends 'BethelFrontBundle:Default:base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
    '@BethelFrontBundle/Resources/public/lib/pikaday/css/pikaday.css' %}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" media="all">
    {% endstylesheets %}
    <style type="text/css">
        /* override the foundation padding for table elements */
        .pika-table th, .pika-table td {
            padding:0px;
        }
    </style>
{% endblock %}

{% block subnav_links %}
    {% if is_granted('ROLE_ADMIN') %}
        <dd class="{{ app.request.get('_route') == 'session' ? 'active' }}"><a href="{{ path('session') }}">Available Sessions</a></dd>
        <dd class="{{ app.request.get('_route') == 'session_closed' ? 'active' }}"><a href="{{ path('session_closed') }}">Closed Sessions</a></dd>
        <dd class="{{ app.request.get('_route') == 'session_create' ? 'active' }}"><a href="{{ path('session_create') }}">Create a Session</a></dd>
    {% endif %}
{% endblock %}