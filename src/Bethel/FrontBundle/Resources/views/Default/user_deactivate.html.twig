{% extends 'BethelUserViewBundle:Default:base.html.twig' %}

{% block main %}
    <div class="row">
        <div class="large-12 columns">

            <div class="callout panel">
                <p>Deactivate {{ deactivateUser.firstName }} {{ deactivateUser.lastName }} ({{ deactivateUser.username }})?</p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns">
            {{ form_start(deactivateForm) }}
            {{ form_errors(deactivateForm) }}
            <div class="text-center">
                <a href="{{ path('admin_user_edit', { 'id': deactivateUser.id }) }}" class="button radius large">Cancel</a>
                {{ form_widget(deactivateForm.save) }}
            </div>
            {{ form_rest(deactivateForm) }}
            {{ form_end(deactivateForm) }}
        </div>
    </div>
{% endblock %}